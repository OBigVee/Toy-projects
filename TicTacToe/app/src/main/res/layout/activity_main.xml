            android:layout_marginEnd="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:textColor="#EE0053"
            android:freezesText="true"
            android:layout_weight="1"/>

    </LinearLayout>




</LinearLayout>